#!/bin/bash

# ExecLab CLI: Shortens docker-compose commands
PROJECT_NAME="ExecLab"

case "$1" in
    up)
        echo "üöÄ Starting $PROJECT_NAME..."
        docker-compose up -d
        ;;
    down)
        echo "üõë Stopping $PROJECT_NAME..."
        docker-compose down
        ;;
    build)
        echo "üî® Building $PROJECT_NAME..."
        docker-compose build
        ;;
    run)
        if [ -z "$2" ] || [ -z "$3" ]; then
            echo "‚ùå Usage: exec run <language> <filename> [input_file]"
            exit 1
        fi
        echo "‚ñ∂Ô∏è Running $2 ($3) inside $PROJECT_NAME..."
        docker-compose run --rm exec_lab run_code "$2" "$3" "$4"
        ;;
    *)
        echo "‚öôÔ∏è ExecLab CLI"
        echo "Usage: exec [command]"
        echo "Commands:"
        echo "  up        Start the system"
        echo "  down      Stop the system"
        echo "  build     Build the system"
        echo "  run       Run a file: exec run <language> <filename> [input_file]"
        ;;
esac
